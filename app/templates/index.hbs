
<main>
  <div class="container-fluid main__inner">
    <div class="row">
      <h1 id="headerText">Enter your stellar account's public key</h1>
      {{input id="enterAccount" type="text" value=accountNumber change="updateAccountNumber" placeholder="e.g. GBKBXKR6HUU6TNGEH2TECKZBOYLG5L2I2QUB7JRBSVCAK4QA13FXD25W"}}

      {{#if accountNumber}}
        {{#link-to 'account' accountNumber id="seeAccountDetails"}}See Account Details{{/link-to}}
      {{/if}}
    
    </div>
  </div><!-- /.container-fluid -->
</main>

